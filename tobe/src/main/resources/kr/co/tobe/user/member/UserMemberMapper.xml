<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.tobe.user.member.UserMemberMapper">
	
	<resultMap type="HashMap" id="currentCourseIndexpMap">
		<id column="teacher_img" property="teacher_img"/>
		<id column="i_cname" property="i_cname"/>
		<id column="i_startday" property="i_startday"/>
		<id column="i_endday" property="i_endday"/>
	</resultMap>
	
	<resultMap type="HashMap" id="pastCourseIndexpMap">
		<id column="teacher_img" property="teacher_img"/>
		<id column="pay_date" property="pay_date"/>
		<id column="order_no" property="order_no"/>
		<id column="i_cname" property="i_cname"/>
		<id column="i_price" property="i_price"/>
		<id column="i_startday" property="i_startday"/>
		<id column="i_endday" property="i_endday"/>
	</resultMap>

	<resultMap type="HashMap" id="myCourseAskIndexMap">
		<id column="teacher_img" property="teacher_img"/>
		<id column="pay_date" property="pay_date"/>
		<id column="order_no" property="order_no"/>
		<id column="i_cname" property="i_cname"/>
		<id column="i_price" property="i_price"/>
		<id column="i_startday" property="i_startday"/>
		<id column="i_endday" property="i_endday"/>
	</resultMap>
	
	<resultMap type="HashMap" id="myReviewIndexMap">
		<id column="r_cname" property="r_cname"/>
		<id column="r_title" property="r_title"/>
		<id column="r_writedate" property="r_writedate"/>
	</resultMap>		
	
