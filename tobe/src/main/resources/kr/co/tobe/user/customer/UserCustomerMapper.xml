<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.tobe.user.customer.UserCustomerMapper">
	
	<sql id="whereSql">
		<where>
			<if test="searchWord != null and searchWord != ''">
				<if test="searchType == 'all'">
					title LIKE '%${searchWord}%' OR content LIKE '%${searchWord}%'
				</if>
				<if test="searchType != 'all'">
					${searchType} LIKE '%${searchWord}%'
				</if>
			</if>
		</where>
	</sql>
	
	<select id="list" parameterType="kr.co.tobe.vo.QnaVO" resultType="kr.co.tobe.vo.QnaVO">
		SELECT *
		FROM qna
		<include refid="whereSql"/>
		ORDER BY gno DESC, ono ASC
		LIMIT #{startIdx}, 10
	</select>
	<select id="count" parameterType="kr.co.tobe.vo.QnaVO" resultType="int">
		SELECT COUNT(*)
		FROM qna
		<include refid="whereSql"/>
	</select>
	
	<insert id="insert" parameterType="kr.co.tobe.vo.QnaVO">
		INSERT INTO qna(
			`member_no`,
			`q_title`,
			`q_content`,
			`q_writedate`,			
			`gno`,
			`ono`,
			`nested`
		) VALUES (
			#{member_no},
			#{q_title},
			#{q_content},
			NOW(),
			0,
			0,
			0
		)
	</insert>
<!--  -->
	<update id="qnaUpdate" parameterType="kr.co.tobe.vo.QnaVO">
		UPDATE qna SET 
			q_title=#{q_title},
			q_content=#{q_content}
		WHERE qna_no=#{qna_no}
	</update>
	<insert id="qnaInsert" parameterType="kr.co.tobe.vo.QnaVO">
		INSERT INTO qna (
			`member_no`,
			`q_title`,
			`q_content`,
			`q_writedate`,
			`gno`,
			`ono`,
			`nested`
		) VALUES (
			#{member_no},
			#{q_title},
			#{q_content},
			NOW(),
			0,
			0,
			0
		)
		<selectKey keyProperty="qna_no" order="AFTER" resultType="int">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<update id="updateGno" parameterType="int">
		UPDATE qna SET gno=#{no} WHERE qna_no=#{no}
	</update>
	
	<delete id="qnaDelete" parameterType="int">
		DELETE FROM qna WHERE qna_no=#{no}
	</delete>


</mapper>